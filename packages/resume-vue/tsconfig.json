{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "node16",
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist", 

    "paths": {
      "@/*": [ "src/*" ], 
      "@components/*": [ "src/components/*" ]
    }
  }
}